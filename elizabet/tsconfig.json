{
  "compileOnSave": true,
  "compilerOptions": {
        "lib": [
            "es6"
        ],
      "outDir": "build",
      "allowJs": true,
      "target": "es6",
      "allowUnreachableCode": false,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
  },
  "include": [
      "./**/*",
    "./node_modules/@mercadopago/sdk-js/**/*"
  ],
  "exclude": [
      "./plugins/**/*",
      "./src/typings/**/*",
      "./built/**/*"
  ]
}